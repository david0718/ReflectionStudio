<ad:DockableContent x:Class="ReflectionStudio.Components.UserControls.PropertyExplorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ad="clr-namespace:AvalonDock;assembly=AvalonDock"
             xmlns:converters="clr-namespace:ReflectionStudio.Components.Converters"
             xmlns:controls="clr-namespace:ReflectionStudio.Controls;assembly=ReflectionStudio.Controls"
             Title="Properties" IsCloseable="true"
             Icon="/ReflectionStudio;component/Resources/Images/16x16/properties.png"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <controls:PropertyGrid x:Name="propGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                        Instance="{Binding PropertyContext}" />
    </Grid>
    
</ad:DockableContent>
