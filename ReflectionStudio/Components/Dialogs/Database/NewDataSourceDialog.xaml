<ucd:HeaderedDialogWindow x:Class="ReflectionStudio.Components.Dialogs.Database.NewDataSourceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ucd="clr-namespace:ReflectionStudio.Controls;assembly=ReflectionStudio.Controls"
        Title="New data source"
        DialogDescription="Select the appropriate settings"
        DialogImage="/ReflectionStudio;component/Resources/Images/32x32/information.png"                          
        Height="400" Width="340" SizeToContent="WidthAndHeight">
    <Grid Name="MainGrid" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Button Content="Create" Grid.Row="1" Height="23" HorizontalAlignment="Right" Name="btnCreate" VerticalAlignment="Bottom" Width="75" Click="btnCreate_Click" />
        <Button Content="Test" Grid.Row="1" Height="23" HorizontalAlignment="Left" Name="btnTest" VerticalAlignment="Bottom" Width="75" Click="btnTest_Click" />
    </Grid>
</ucd:HeaderedDialogWindow>
